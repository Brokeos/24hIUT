{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('select') }}" type="text/css" />
{% endblock %}

{% block body %}
    <div class="section m-0" style="background: #fff; margin-top: 80px !important;">
        <div class="container">
            <div class="row justify-content-between align-items-center">
                <div class="col-lg-8 col-md-8 offset-md-2">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h4 class="mb-3">S'inscrire</h4>
                            <div class="form-widget">
                                {% if not form.vars.valid %}
                                    {% for child in form.children %}
                                        {%for error in child.vars.errors %}
                                            <div class="alert alert-danger">
                                                {{ error.message}}
                                            </div>
                                        {%endfor%}
                                    {%endfor%}
                                {% endif %}
                                {% if success is defined and success %}
                                    <div class="alert alert-success">
                                        Inscription réussie ! Vous pouvez maintenant vous <a href="{{ path('security.login') }}">connecter !</a>
                                    </div>
                                {% endif %}
                                <form class="nobottommargin" action="{{ path('security.register') }}" method="post">
                                    {{ form_widget(form._token) }}
                                    <div class="col_full mb-3">
                                        <label for="register_username">Nom d'utilisateur</label>
                                        <input type="text" id="register_username" name="account[username]" class="form-control input-sm required" required>
                                    </div>
                                    <div class="col_full mb-3">
                                        <label for="register_password">Mot de passe</label>
                                        <input type="password" id="register_password" name="account[plainPassword]" class="form-control input-sm required" required>
                                    </div>
                                    <div class="col_full mb-3">
                                        <label for="register_office">Entreprise</label>
                                        <input type="text" id="register_office" name="account[office]" class="form-control input-sm required" required>
                                    </div>
                                    <div class="col_full mb-3">
                                        <label for="register_phone">Téléphone</label>
                                        <input type="text" id="register_phone" name="account[phoneNumber]" class="form-control input-sm required" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleFormControlSelect1">Type de compte</label>
                                        <select class="form-control" id="register_accountType" name="role">
                                            <option value="ROLE_EXPORTATEUR">Exportateur</option>
                                            <option value="ROLE_IMPORTATEUR">Importateur</option>
                                        </select>
                                    </div>
                                    <div class="col_full nobottommargin">
                                        <button class="button button-rounded btn-block nott ls0 m-0" type="submit" value="submit">Inscription</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


